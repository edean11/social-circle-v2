!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Social Circle
    = stylesheet_link_tag    'application', media: 'all'
    %script{:src => "http://code.jquery.com/jquery-1.9.1.js", :type => "text/javascript"}
    %script{:src => "http://code.jquery.com/ui/1.10.2/jquery-ui.js", :type => "text/javascript"}
    %script{:src => "https://maps.googleapis.com/maps/api/js?key="+ENV['GMAPS_ACCESS_KEY'], :type => "text/javascript"}
    = javascript_include_tag 'application'
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = csrf_meta_tags
  %body
    .main-container
      .nav-container
        .logo.nav-link= link_to image_tag('thesocialcircle.png'), root_path
        - if !logged_in?
          - unless controller_name == "users" && action_name != "index"
            %p.nav-link= link_to "Sign Up", new_user_path
          - unless controller_name == "user_sessions"
            %p.nav-link= link_to "Sign In", new_user_session_path
        - else
          = link_to content_tag(:i,nil, class: 'fa fa-sign-out right-nav-link'), user_session_path, method: :delete
          = link_to content_tag(:i,nil, class: 'fa fa-user right-nav-link'), edit_user_path(current_user)
      %section#content
        - flash.each do |key, message|
          %div{ class: "flash-#{key}" }= message
        %article= yield
      %footer
