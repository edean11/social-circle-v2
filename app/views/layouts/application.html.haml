!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Social Circle
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    #container
      %nav
        %ul
          %li= link_to "Social Circle", root_path
          - if !logged_in?
            - unless controller_name == "users" && action_name != "index"
              %li= link_to "Sign Up", new_user_path
            - unless controller_name == "user_sessions"
              %li= link_to "Sign In", new_user_session_path
          - else
            %li= link_to "Sign Out", user_session_path, method: :delete
      / %header= content_for?(:page_title) ? content_for(:page_title) : "Page Title"
      %section#content
        - flash.each do |key, message|
          %div{ class: "flash-#{key}" }= message
        %article= yield
      %footer
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.9.3/lodash.min.js", :type => "text/javascript"}
    %script{:src => "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", :type => "text/javascript"}
    %script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", :type => "text/javascript"}
